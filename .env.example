# OpenAI API設定
OPENAI_API_KEY=your_openai_api_key_here

# Anthropic Claude API設定（OpenAI Vision拒否時のフォールバック用）
# Claude APIキーを設定すると、OpenAI Vision APIが拒否した場合に自動的にClaudeを使用します
ANTHROPIC_API_KEY=your_anthropic_api_key_here

# コンテンツポリシーチェック無効化（誤検出が多い場合に有効化）
# true: コンテンツポリシーチェックを無効化（推奨）
# false: コンテンツポリシーチェックを有効化（デフォルト）
DISABLE_CONTENT_POLICY_CHECK=true

# Claude Vision APIフォールバックを有効化
# true: OpenAI拒否時にClaudeに自動切り替え（推奨）
# false: OCRのみにフォールバック
ENABLE_CLAUDE_FALLBACK=true
